{
  "compilerOptions": {
    //"target": "es5",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    //"module": "esnext",
    "module": "commonjs",
    //"module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true
  },
  // "typeAcquisition": { "enable": true, "include": ["image-hash"] },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
